<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedCornersArtist">
        <item name="cornerSize">@dimen/dimen_26dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="RoundedCornersSongs">
        <item name="cornerSize">@dimen/dimen_15dp</item>
        <item name="cornerFamily">rounded</item>
    </style>


    <style name="RoundedCornersAlbum">
        <item name="cornerSize">@dimen/dimen_10dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="RoundedCornersGenres">
        <item name="cornerSize">@dimen/dimen_4dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="strokeColor">@color/text_indicator_color</item>
    </style>
    
    <style name="TextHeader">
        <item name="android:textSize">@dimen/dimen_20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextTitleMedia">
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingHorizontal">@dimen/dimen_12dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextSubtitleMedia">
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingHorizontal">@dimen/dimen_12dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:alpha">0.5</item>
    </style>
</resources>